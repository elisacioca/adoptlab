<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="loginButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="loginInput" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/opensans_italic_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">#879CA3</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="loginText">
        <item name="android:fontFamily">@font/opensans_italic_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="terms_conditions">
        <item name="android:fontFamily">@font/opensans_italic_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="title_text">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">36dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="sample_text">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="description">
        <item name="android:fontFamily">@font/opensans_italic</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="question">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="answer">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/opensans_semibold_italic</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="question_number">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/opensans_italic_light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="number_of_founds">
        <item name="android:textColor">@color/blueDescription</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/opensans_italic</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="title_animal">
        <item name="android:textColor">@color/blueDescription</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/opensans_italic</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="choose_photo">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
