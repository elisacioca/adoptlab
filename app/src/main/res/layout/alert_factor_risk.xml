<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_pet"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/title_text"
            android:textColor="@color/colorPrimary"
            android:text="Nu te grabi!"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/pet_details"
            android:textColor="@color/greyDetails"
            android:text="Adoptia unui animal implica multa responsabilitate, timp si atentie. /n  Fii sigur ca esti pregatit pentru primirea in familie a unui membru nou si intereseaza-te in legatura cu procedeele medicale de baza ale animalutului inainte sa faci acest pas."/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>