<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="adoption"
            type="com.example.adoptmypet.models.Adoption" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.adoption_details.AdoptionDetailsActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".presentation.PetDescriptionActivity">

                <LinearLayout
                    android:id="@+id/petAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/fullName"
                        style="@style/pet_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fullName" />

                    <TextView
                        android:id="@+id/fullNameValue"
                        style="@style/pet_details_grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="@string/fullName"
                        android:text="@{adoption.fullNameAdopter}"/>

                    <TextView
                        android:id="@+id/phoneNo"
                        style="@style/pet_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/phoneNo" />

                    <TextView
                        android:id="@+id/phoneNoValue"
                        style="@style/pet_details_grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="@string/phoneNo"
                        android:text="@{adoption.telephoneNo}"/>

                    <TextView
                        android:id="@+id/questionnaire"
                        style="@style/pet_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/questionnaireAnswers" />

                    <TextView
                        android:id="@+id/questionnaireValue"
                        style="@style/pet_details_grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="@string/questionnaireAnswers"
                        android:text="@{adoption.questionnaireAdopter}"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout
                        app:layout_constraintTop_toBottomOf="@id/photo"
                        android:id="@+id/buttons"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorPrimary"
                            android:layout_margin="0dp"
                            android:padding="0dp"
                            android:text="@string/erase"
                            android:textAllCaps="false"
                            android:textColor="#fff"
                            android:onClick="onDeleteItemClicked"/>


                    </LinearLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>